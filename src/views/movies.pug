extends layout

block content
	-data = data || {}

	if errors
		ul.my-errors
			for error in errors
				li= error.msg

	form(action="." method="POST", class="form-registration")
		label(for="searchMovieTitle") Search for a movie:
		input(
			type="text"
			id="searchMovieTitle"
			name="searchMovieTitle"
			class="form-control"
			value=data.movieTitle
		)

	if movies.length
		table.listing-table.table-dark.table-striped
			tr
				th Title
				th Runtime
			each movie in movies
				tr
					td= movie.title
					td= movie.runtime
	else
		p No movies in the database yet.